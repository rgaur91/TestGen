<GridPane style="-fx-background-color: whitesmoke;-fx-opacity: 100;" id="AddEditOverlay" hgap="2.0" prefHeight="100" prefWidth="100" vgap="2.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.testgen.ui.controller.SourceCurdController">
    <Text text="Source Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="sourceNameField" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Text text="Endpoint" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <TextField fx:id="endpointField" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Text text="Method" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <ChoiceBox fx:id="methodChoice" GridPane.columnIndex="2" GridPane.rowIndex="4" >
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="GET" />
                <String fx:value="POST" />
                <String fx:value="PUT" />
            </FXCollections>
        </items>
    </ChoiceBox>
    <TextArea fx:id="requestBodyTxtArea" GridPane.columnIndex="2" GridPane.rowIndex="3" promptText="Enter Request body as JSON/text" wrapText="true" />
    <Text text="Type" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Button onAction="#closeOverlay" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Button onAction="#saveSource" text="Save" GridPane.columnIndex="2" GridPane.rowIndex="6" />
    <Label disable="true" fx:id="errorLabel" style="-fx-progress-color: crimson" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="7" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <opaqueInsets>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
